{
  "name": "convert-layout",
  "version": "0.11.0",
  "description": "Converts text from one keyboard layout to other",
  "keywords": [
    "keyboard",
    "keyboard layout",
    "russian",
    "english",
    "change",
    "qwerty",
    "belarusian",
    "german",
    "kazakh",
    "spanish",
    "ukrainian",
    "hebrew",
    "persian",
    "farsi"
  ],
  "scripts": {
    "prepack": "npm run build",
    "build": "node build.js",
    "spell": "yaspeller *.md",
    "clean": "rimraf coverage/ index.js colemak.js dvorak.js ??.js",
    "test": "yarn build && jest --coverage && eslint . && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/convert-layout",
  "devDependencies": {
    "@logux/eslint-config": "^45.4.8",
    "@logux/sharec-config": "^0.12.2",
    "@size-limit/preset-small-lib": "^6.0.2",
    "clean-publish": "^3.4.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.5.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.6.1",
    "size-limit": "^6.0.1",
    "yaspeller": "^7.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "build.js": "eslint --fix",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "quotes": "off"
    },
    "overrides": [
      {
        "files": [
          "index.js"
        ],
        "rules": {
          "node/global-require": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "convert.js",
    "[a-z][a-z].js",
    "dvorak.js",
    "colemak.js"
  ],
  "size-limit": [
    {
      "path": "ru.js",
      "limit": "399 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "Colemak",
      "npm"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.12.2"
  }
}
