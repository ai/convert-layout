{
  "name": "convert-layout",
  "version": "0.8.0",
  "description": "Converts text from one keyboard layout to other",
  "keywords": [
    "keyboard",
    "keyboard layout",
    "russian",
    "english",
    "change",
    "qwerty",
    "belarusian",
    "german",
    "kazakh",
    "spanish",
    "ukrainian",
    "hebrew",
    "persian",
    "farsi"
  ],
  "scripts": {
    "prepack": "npm run build",
    "build": "node build.js",
    "api": "documentation build *.js -f md -o api.md",
    "spell": "yarn api && yaspeller-ci *.md",
    "clean": "rimraf api.md coverage/ index.js colemak.js dvorak.js ??.js",
    "test": "yarn build && jest --coverage && eslint-ci . && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/convert-layout",
  "devDependencies": {
    "@logux/eslint-config": "^30.0.2",
    "@logux/sharec-config": "^0.3.5",
    "clean-publish": "^1.1.2",
    "documentation": "^12.1.1",
    "eslint": "^6.1.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.14.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "rimraf": "^2.6.3",
    "size-limit": "^1.3.8",
    "yaspeller-ci": "^1.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "size-limit": [
    {
      "path": "ru.js",
      "limit": "264 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser",
    "rules": {
      "quotes": "off"
    },
    "overrides": [
      {
        "files": [
          "index.js"
        ],
        "rules": {
          "global-require": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "Colemak",
      "npm"
    ]
  },
  "sharec": {
    "version": "0.3.5"
  }
}
